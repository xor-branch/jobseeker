<div class="modal fade mt-4" id="modal-form" tabindex="-2" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-body pb--5">
        <div class="card bg-secondary shadow border-0 mb-0">
          <div class="card-header bg-white pb-5">
            <div class="text-muted text-center mb-3">
              <small>Sign in with</small>
            </div>
            <div class="btn-wrapper text-center">
              <a href="javascript:;" class="btn btn-neutral btn-icon">
                <span class="btn-inner--icon">
                  <%=image_tag "img/icons/common/github.svg" %>
                </span>
                <span class="btn-inner--text text-dark">Github</span>
              </a>
              <a href="javascript:;" class="btn btn-neutral btn-icon">
                <span class="btn-inner--icon">
                  <%=image_tag "img/icons/common/google.svg" %>
                </span>
                <span class="btn-inner--text text-dark">Google</span>
              </a>
            </div>
          </div>
          <div class="card-body px-lg-5 py-lg-5">
            <div class="text-center text-muted mb-4">
              <small>Or sign in with credentials</small>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% if flash['alert'] %>
                <div id="error_explanation"><p><%= flash['alert'] %></p></div>
              <% end %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                  </div>
                  <%= f.email_field :email, class: "form-control", type: "email", placeholder: "Email", autofocus: true, autocomplete: "email" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                  </div>
                  <%= f.password_field :password, class: "form-control", type: "password", placeholder: "Password", autocomplete: "new-password" %>
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="custom-control custom-control-alternative custom-checkbox">
                  <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheckLogin" %>
                  <label class="custom-control-label" for="customCheckLogin">
                    <span class="text-muted">Remember me</span>
                  </label>
                </div>
              <% end %>
              <div class="text-center">
                <button type="submit" class="btn btn-primary my-4">Sign in</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
